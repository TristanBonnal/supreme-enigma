{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {% for project in projects %}
        <section class="img-block img-block__project {{not loop.index % 2 ? 'img-block__reverse'}}">
            <div class="main-text main-text__project">
                <h1 class="title">{{project.title}}</h1>
                <p> {{project.description}} </p>
                <div class="project-links">
                    <a target="_blank" href="{{project.githubLink}}"><i class="icon fa-brands fa-github"></i>Voir code</a>
                    <a target="_blank" href="{{ project.siteLink }}"><i class="icon fa-solid fa-globe"></i>Explorer site</a>
                </div>
            </div>
            <img class="main-picture" src="{{ asset('/assets/img/') ~ project.image }}" alt="{{project.title}} screenshot">
        </section>
    {% endfor %}
</div>
{% endblock %}
